{
  "name": "quave-collections",
  "version": "1.0.0",
  "scripts": {
    "quave-eslint": "eslint . --fix",
    "quave-prettier": "prettier --write \"**/*.js\"",
    "quave-check": "npm run quave-eslint && npm run quave-prettier"
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "meteor npm test && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@quave/eslint-config-quave": "^2.0.0"
  }
}
